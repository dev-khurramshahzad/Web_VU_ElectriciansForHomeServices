@model IEnumerable<ElectriciansForHomeServices.Models.Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Categories List
    <span class="pull-right">
        @Html.ActionLink("Create New", "Create", "", new {@class="btn btn-success"})
    </span>
    </h2>
<hr />

<p>
   
</p>
<table class="table table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Picture)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Details)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        <img src="~/Content/AppData/@item.Picture" width="50" />
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Details)
    </td>

    <td>
        @Html.DisplayFor(modelItem => item.Status)
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.CatID }, new { @class = "btn btn-sm btn-primary" }) |
        @Html.ActionLink("Details", "Details", new { id = item.CatID }, new { @class = "btn btn-sm btn-success" }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.CatID }, new { @class = "btn btn-sm btn-danger" })
    </td>
</tr>
}

</table>
