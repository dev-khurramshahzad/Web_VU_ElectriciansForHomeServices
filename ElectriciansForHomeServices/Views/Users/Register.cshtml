@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <title>Admin Panel</title>

    <!-- Favicons -->
    <link href="~/Content/Admin/img/favicon.png" rel="icon">
    <link href="~/Content/Admin/img/apple-touch-icon.png" rel="apple-touch-icon">

    <!-- Bootstrap core CSS -->
    <link href="~/Content/Admin/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <!--external css-->
    <link href="~/Content/Admin/lib/font-awesome/css/font-awesome.css" rel="stylesheet" />
    <!-- Custom styles for this template -->
    <link href="~/Content/Admin/css/style.css" rel="stylesheet">
    <link href="~/Content/Admin/css/style-responsive.css" rel="stylesheet">

</head>

<body>
    <!-- **********************************************************************************************************************************************************
        MAIN CONTENT
        *********************************************************************************************************************************************************** -->
    <div id="login-page">
        <div class="container">
            <form class="form-login" method="post" action="/Users/CreateData">
                <h2 class="form-login-heading">sign up now</h2>
                <div class="login-wrap">
                    <input type="text" name="name" placeholder="Full Name" required class="form-control" autofocus>
                    <br>
                    <input type="number" name="cnic" placeholder="CNIC" required class="form-control" autofocus>
                    <br>
                    <input type="number" name="phone" placeholder="Phone" required class="form-control" autofocus>
                    <br>
                    <input type="text" name="address" placeholder="Address" required class="form-control" autofocus>
                    <br>
                    <input type="email" name="email" placeholder="Email" required class="form-control" autofocus>
                    <br>
                    <input type="password" name="password" placeholder="Password" required class="form-control" autofocus>
                    <br>
                    <input type="password" name="cpassword" placeholder="Confirm Password" required class="form-control" autofocus>
                    <br />
                    <button class="btn btn-theme btn-block"  type="submit"><i class="fa fa-lock"></i> Register</button>
                    <hr>

                    <div class="registration">
                        Already have an account?<br />
                        <a class="" href="/Users/Login">
                            Login Now
                        </a>
                    </div>
                </div>

            </form>
        </div>
    </div>
    <!-- js placed at the end of the document so the pages load faster -->
    <!-- js placed at the end of the document so the pages load faster -->
    <script src="~/Content/Admin/lib/jquery/jquery.min.js"></script>
    <script src="~/Content/Admin/lib/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/Content/Admin/lib/jquery-ui-1.9.2.custom.min.js"></script>
    <script src="~/Content/Admin/lib/jquery.ui.touch-punch.min.js"></script>
    <script class="include" type="text/javascript" src="~/Content/Admin/lib/jquery.dcjqaccordion.2.7.js"></script>
    <script src="~/Content/Admin/lib/jquery.scrollTo.min.js"></script>
    <script src="~/Content/Admin/lib/jquery.nicescroll.js" type="text/javascript"></script>
    <!--common script for all pages-->
    <script src="lib/common-scripts.js"></script>
    <!--script for this page-->
</body>

</html>
