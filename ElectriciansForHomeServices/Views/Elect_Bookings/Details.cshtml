@model ElectriciansForHomeServices.Models.Booking

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div>
    <h2>Booking Details</h2>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Electrician.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Electrician.Name)
        </dd>

        <dt>
            Booked By
        </dt>

        <dd>
            @Html.DisplayFor(model => model.User.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.BookingDate)
        </dt>

        <dd>
            @string.Format("{0:dd MMMM yyyy}", Model.BookingDate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.BookingTime)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.BookingTime)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.WorkStartDate)
        </dt>

        <dd>
            @string.Format("{0:dd MMMM yyyy}", Model.WorkStartDate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.WorkEndDate)
        </dt>

        <dd>
            @string.Format("{0:dd MMMM yyyy}", Model.WorkEndDate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Status)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Status)
        </dd>



        <dt>
            Charges Per Day
        </dt>

        <dd>
            Rs. @Model.Electrician.RatePerDay

        </dd>

        <dt>
            No. of Days
        </dt>

        <dd>
            @{
                int days = Model.WorkEndDate.Subtract(Model.WorkStartDate).Days;
            }

            @days Day(s)

        </dd>

        <dt>
            Charges Total
        </dt>

        <dd>
            Rs. @(Model.Electrician.RatePerDay * days)

        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Details)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Details) -
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Back to List", "Index")
</p>
