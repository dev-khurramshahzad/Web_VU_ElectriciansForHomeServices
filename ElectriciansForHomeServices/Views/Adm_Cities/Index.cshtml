@model IEnumerable<ElectriciansForHomeServices.Models.City>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>
    Cities List
    <span class="pull-right">
        @Html.ActionLink("Create New", "Create", "", new { @class = "btn btn-success" })
    </span>
</h2>
<hr />
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Picture)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Details)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        <img src="~/Content/AppData/@item.Picture" width="50" />
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Name)
    </td>

    <td>
        @Html.DisplayFor(modelItem => item.Details)
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.CityID }) |
        @Html.ActionLink("Details", "Details", new { id = item.CityID }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.CityID })
    </td>
</tr>
    }

</table>
